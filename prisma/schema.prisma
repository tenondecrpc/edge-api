// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  name         String
  role         String
  email        String @unique
  password     String
  refreshToken String

  @@map("users")
}
